FROM golang:latest

ENV GO111MODULE=on \
    CGO_ENABLED=0 \
    GOOS=linux \
    GOARCH=amd64 \
    GOPROXY=https://goproxy.io,direct \
    HOME=/root/go/gnchatdemo

MAINTAINER mingyi.wu 15801227644@126.com
WORKDIR ${HOME}
 COPY config  ./config/
 COPY go.mod  .
 COPY go.sum  .
 COPY app  ./app/
RUN  go mod download
WORKDIR ${HOME}/app/login-server/
RUN   echo $PWD &&  go build -o login .
WORKDIR ${HOME}/app/login-server/
ENTRYPOINT ["./login","-serverId","login-001","-mode",""]